{
  "name": "@kjots/stream-utils",
  "version": "0.0.0",
  "description": "Stream utilities",
  "scripts": {
    "build": "tsc --build packages/*",
    "build:stream-observable": "tsc --build packages/stream-observable",
    "clean": "rimraf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "clean:stream-observable": "rimraf packages/stream-observable/dist packages/stream-observable/tsconfig.tsbuildinfo",
    "lerna:bootstrap": "lerna bootstrap",
    "prepare": "npm-run-all lerna:bootstrap clean build",
    "test": "npm-run-all test:stream-observable",
    "test:stream-observable": "npm-run-all test:stream-observable:lint test:stream-observable:mocha",
    "test:stream-observable:lint": "tslint --project packages/stream-observable",
    "test:stream-observable:mocha": "mocha --require ts-node/register packages/stream-observable/src/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjots/stream-utils.git"
  },
  "keywords": [
    "stream",
    "utils"
  ],
  "author": "Karl Juri Ots <kjots@kjots.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kjots/stream-utils/issues"
  },
  "homepage": "https://github.com/kjots/stream-utils#readme",
  "engines": {
    "node": ">=12.14.1",
    "npm": ">=6.13.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@kjots/tslint-rules": "^1.4.3",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.24",
    "chai": "^4.2.0",
    "husky": "^4.0.10",
    "lerna": "^3.20.2",
    "mocha": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  }
}
